МОДУЛЬ Белорусификация;
ИМПОРТ Ввод, Вывод;
ПЕРЕМЕННЫЕ
  а, б, в, г: ЛИТЕРА;
НАЧАЛО
  Вывод.Литера('В'); Вывод.Литера('в'); Вывод.Литера('е');
  Вывод.Литера('д'); Вывод.Литера('и'); Вывод.Литера('т');
  Вывод.Литера('е'); Вывод.Литера(' '); Вывод.Литера('4');
  Вывод.Литера(' '); Вывод.Литера('б'); Вывод.Литера('у');
  Вывод.Литера('к'); Вывод.Литера('в'); Вывод.Литера('ы'); Вывод.Перенос;

  Ввод.Литера(а); Ввод.Литера(б);
  Ввод.Литера(в); Ввод.Литера(г);

  Вывод.Перенос;

  ЕСЛИ а = "о" ТОГДА а := "а"
  АЕСЛИ а = "О" ТОГДА а := "А"
  АЕСЛИ а = "е" ТОГДА а := "я"
  АЕСЛИ а = "Е" ТОГДА а := "Я"
  АЕСЛИ а = "т" ТОГДА а := "ц"
  АЕСЛИ а = "Т" ТОГДА а := "Ц"
  АЕСЛИ а = ЛИТ(0) ТОГДА а := "*"
  КОНЕЦ;
  Вывод.Литера(а);

  а := б;
  ЕСЛИ а = "о" ТОГДА а := "а"
  АЕСЛИ а = "О" ТОГДА а := "А"
  АЕСЛИ а = "е" ТОГДА а := "я"
  АЕСЛИ а = "Е" ТОГДА а := "Я"
  АЕСЛИ а = "т" ТОГДА а := "ц"
  АЕСЛИ а = "Т" ТОГДА а := "Ц"
  АЕСЛИ а = ЛИТ(0) ТОГДА а := "*"
  КОНЕЦ;
  Вывод.Литера(а);

  а := в;
  ЕСЛИ а = "о" ТОГДА а := "а"
  АЕСЛИ а = "О" ТОГДА а := "А"
  АЕСЛИ а = "е" ТОГДА а := "я"
  АЕСЛИ а = "Е" ТОГДА а := "Я"
  АЕСЛИ а = "т" ТОГДА а := "ц"
  АЕСЛИ а = "Т" ТОГДА а := "Ц"
  АЕСЛИ а = ЛИТ(0) ТОГДА а := "*"
  КОНЕЦ;
  Вывод.Литера(а);

  а := г;
  ЕСЛИ а = "о" ТОГДА а := "а"
  АЕСЛИ а = "О" ТОГДА а := "А"
  АЕСЛИ а = "е" ТОГДА а := "я"
  АЕСЛИ а = "Е" ТОГДА а := "Я"
  АЕСЛИ а = "т" ТОГДА а := "ц"
  АЕСЛИ а = "Т" ТОГДА а := "Ц"
  АЕСЛИ а = ЛИТ(0) ТОГДА а := "*"
  КОНЕЦ;
  Вывод.Литера(а);

  Вывод.Перенос
КОНЕЦ Белорусификация.
