МОДУЛЬ Степени;
ИМПОРТ Ввод, Вывод;
ПЕРЕМЕННЫЕ а, х, и, рез: ЦЕЛОЕ;
НАЧАЛО
  Вывод.Литера('а'); Вывод.Литера('='); Ввод.Целое(а);
  Вывод.Литера('х'); Вывод.Литера('='); Ввод.Целое(х);
  ЕСЛИ х >= 0 ТОГДА
    и := 0;
    рез := 1;
    ПОВТОР
      рез := рез * а;
      и := и + 1;
      Вывод.Целое(и, 3); Вывод.Литера(')');
      Вывод.Целое(рез, 12); Вывод.Перенос
    ДО и = х
  КОНЕЦ
КОНЕЦ Степени.
