МОДУЛЬ Волны;
ИМПОРТ Ввод, Вывод;
ПЕРЕМЕННЫЕ Н, К, и, й, т, длина: ЦЕЛОЕ;
НАЧАЛО
  Вывод.Литера('Н'); Вывод.Литера('=');
  Ввод.Целое(Н);
  Вывод.Литера('К'); Вывод.Литера('=');
  Ввод.Целое(К);
  и := 0;
  ПОВТОР
    й := 1;
    ПОКА й <= 2 * К - 1 ДЕЛАТЬ
      ЕСЛИ й < К ТОГДА длина := й
      АЕСЛИ й = К ТОГДА длина := К (* Это нарочно *)
      ИНАЧЕ длина := 2 * К - й
      КОНЕЦ;
      т := 0;
      ПОКА т < длина ДЕЛАТЬ
        Вывод.Литера('=');
        т := т + 1
      КОНЕЦ;
      Вывод.Перенос;
      й := й + 1
    КОНЕЦ;
    ЕСЛИ и # Н - 1 ТОГДА
      Вывод.Литера('~');
      Вывод.Перенос;
    КОНЕЦ;
    и := и + 1
  ДО и = Н
КОНЕЦ Волны.
